<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#27739C9C"
    android:orientation="vertical"
    android:id="@+id/olayout"
    tools:context=".forgotpassword.OTPVerify">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:src="@drawable/ic_message"

        />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:fontFamily="@font/roboto"
        android:gravity="center"
        android:padding="10dp"
        android:text="Verification"
        android:textColor="@color/login"
        android:textSize="22sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:fontFamily="@font/roboto"
        android:gravity="center"
        android:textColor="@color/black"
        android:text="Enter your OTP Code that was sent to your Email Address"
        android:textSize="15sp" />


    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:padding="2dp"
        app:cardElevation="5dp">

        <EditText
            android:id="@+id/otpverify"
            android:layout_width="match_parent"
            android:layout_height="50dp"

            android:background="@android:color/transparent"
            android:hint="OTP Code"
            android:inputType="textEmailAddress"
            android:singleLine="true"
            android:textAlignment="center"
            android:textSize="15sp" />

    </com.google.android.material.card.MaterialCardView>

    <Button
        android:id="@+id/sendotp"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginStart="90dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="90dp"
        android:backgroundTint="@color/login"
        android:fontFamily="@font/roboto"
        android:text="Verify"
        android:textAllCaps="false"
        android:textSize="18sp"
        app:cornerRadius="5dp" />


    <TextView
        android:id="@+id/resendOTP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:fontFamily="@font/roboto"
        android:gravity="center"
        android:text="Didn't get your OTP?? Resend Code"
        android:textSize="15sp" />



</LinearLayout>